<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sangeng.mapper.CategoryTagMapper">
    
    <resultMap type="com.sangeng.domain.entity.CategoryTag" id="CategoryTagResult">
        <result property="categoryId"    column="category_id"    />
        <result property="tagId"    column="tag_id"    />
    </resultMap>

    <sql id="selectCategoryTagVo">
        select category_id, tag_id from sg_category_tag
    </sql>

    <select id="selectCategoryTagList" parameterType="com.sangeng.domain.entity.CategoryTag" resultMap="CategoryTagResult">
        <include refid="selectCategoryTagVo"/>
        <where>  
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="tagId != null "> and tag_id = #{tagId}</if>
        </where>
    </select>
    
    <select id="selectCategoryTagByTagId" parameterType="Long" resultMap="CategoryTagResult">
        <include refid="selectCategoryTagVo"/>
        where tag_id = #{tagId}
    </select>
        
    <insert id="insertCategoryTag" parameterType="com.sangeng.domain.entity.CategoryTag">
        insert into sg_category_tag
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="categoryId != null">category_id,</if>
            <if test="tagId != null">tag_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="categoryId != null">#{categoryId},</if>
            <if test="tagId != null">#{tagId},</if>
         </trim>
    </insert>

    <update id="updateCategoryTag" parameterType="com.sangeng.domain.entity.CategoryTag">
        update sg_category_tag
        <trim prefix="SET" suffixOverrides=",">
            <if test="categoryId != null">category_id = #{categoryId},</if>
        </trim>
        where tag_id = #{tagId}
    </update>

    <delete id="deleteCategoryTagByTagId" parameterType="Long">
        delete from sg_category_tag where tag_id = #{tagId}
    </delete>

    <delete id="deleteCategoryTagByTagIds" parameterType="String">
        delete from sg_category_tag where tag_id in 
        <foreach item="tagId" collection="array" open="(" separator="," close=")">
            #{tagId}
        </foreach>
    </delete>
</mapper>